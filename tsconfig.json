{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "./dist",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "jsx": "react",
    "allowJs": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "~/*": ["src/*"]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": [
    "config",
    "public",
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "jest.config.js"
  ]
}
